<div id="content-header">
  <h1>User Profile</h1>
  <h3>User Information</h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png",:border => 0), "" %>
  </div>
<div><%= image_tag("underline.jpg",width: "100%")%></div>
</div>

  <div id="inner-tab-menu">
    <ul><li><%= link_to "View Profile" %></li>
        <li><%= link_to "Edit", edit_user_path(@user)%></li>
        <li><%= link_to "Delete",@user,method: :delete,data:{confirm:'Are you sure want to delete?'} %></li></ul>
  </div>

<div id="page-yield">

  <% unless flash[:notice].nil? %><p class="flash-msg"> <%= flash[:notice] %> </p><% end %>

	<table align="center" class="table" style="width:500px">
  <tbody><tr class="tr-blank"></tr>
      <tr class="tr-head">
        <td class="col-2">Name</td>
        <td class="col-2"><%= @user.first_name+' '+@user.last_name  %></td></tr>
       <tr class="tr-head">
        <td class="col-2">UserName</td>
        <td class="col-2"><%= @user.username %></td></tr>
       <tr class="tr-head">
        <td class="col-2">Role</td><td class="col-2"><%= @user.role %></td></tr>
        <tr class="tr-head">
        <td class="col-2">Email ID</td><td class="col-2"><%= @user.email %></td></tr>
            <tr class="tr-blank"></tr>
  </tbody>
  </table> 

  <div class="extender"></div>
</div>