
<div id="content-header">
  <h1>Employee Settings</h1>
  <h3>Add Bank Details</h3>
</div>

<div id="page-yield">
<% unless flash[:notice].nil? %> <p class="flash-msg"> <%= flash[:notice] %> </p><% end %>
<div align="center">

	<%= form_for @bank_field, url:{action:'add_bank_field'},remote:true do |c|%>
	
		<div><%= c.label :Name%>
		<%= c.text_field :name%></div>
		<div><%= c.label :Status%> <%= c.radio_button "status", "active", checked: true %> <%=c.label :Active%> 
		<%= c.radio_button "status", "inactive"%> <%=c.label :Inactive%>
		</div>

		<div>
			<%= c.submit 'Create'%>
		</div>
	<%end%>


</div>


<div id="add_bank_field">
<%=render 'bank_field'%>
</div>
<div id="myModal" class="modal fade">
 </div>
 
</div>

