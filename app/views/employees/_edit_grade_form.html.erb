<div class="modal-dialog">
<div class="modal-content">
<div class="modal-header">
  <h3><%= "Editing" %></h3>
</div>


<div class="modal-body">
<ul class="errors5"></ul>
<%= form_for @employee_grade,url:{:action=>'update_grade',grade_id: @employee_grade.id},method: :patch,remote: true do |f|%>
 <table class="table" style="width:85%">
        <tr>
            <td class="col-2"><b>Name:</b></td>
            <td><%=f.text_field :name ,:style =>"width: 250px", class: "form-control"%></td>
        </tr>
        
        <tr>
            <td class="col-2"><b>Priority:</b></td>
             <td><%=f.text_field :priority ,:style =>"width: 250px", class: "form-control"%></td>
        </tr>

       <tr>
            <td class="col-2"><b>Max Period Per Day:</b></td>
             <td><%=f.text_field :max_hours_day ,:style =>"width: 250px", class: "form-control"%></td>
        </tr>

        <tr>
            <td class="col-2">Max_period_per_week</td>
             <td><%=f.text_field :max_hours_week  ,:style =>"width: 250px", class: "form-control"%></td>
        </tr>



        <tr><td><b>Status:</b></td>
             <td align="left"><%= f.radio_button "status", "true", checked: true %><b>Active</b>
             <%= f.radio_button "status", "false"%><b>Inactive</b></td>
        </tr>


        <td colspan="2"><%= f.submit 'Update', class: "btn btn-primary"%>
        	<%= link_to 'cancel', '#', class: "btn btn-default",data:{dismiss:"modal"}%></td>
        </tr>
    </table>
<% end %>

</div></div></div>