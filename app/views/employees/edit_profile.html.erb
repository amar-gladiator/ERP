<div>
  <ul class="breadcrumb">
    
     <li><%= link_to 'Home',dashboard_home_index_path %></li>
     <li><%= link_to 'Human Resources',employees_path %></li>
     <li><%= link_to 'HR Management',employee_management_employees_path %></li>
     <li><%= link_to 'Employee Profile',profile_employees_path(@employee.id)%></li>
     <li>Employee Details Update</li>
  </ul>
</div>
Note:<font color="red">Fields Marked with * must be filled</font>
<div id="flash"><%= render 'layouts/messages'%></div>


<div class="row">
  <div class="box col-md-12">
    <div class="box-inner">
      <div class="box-header well">
        <h2>Employee Details Update</h2>
       
      </div>
        <div class="box-content">
<%= form_for @employee ,url:{action:'update_profile',format:@employee.id} do |f| %>
    <fieldset>
     <% if @employee.errors.any? %>
        <div class="alert alert-danger" style="width:500px" >
          <h3>Error prohibited to from being saved:</h3>
          <ul>
           <% @employee.errors.full_messages.each do |msg| %>
              <li style="width:500px" align="left"><%= msg %></li>
            <% end %>
          </ul>
      
      </div>
          <% end %>
          <div class="row">
      <div class="col-sm-1"></div>
      <div class="col-sm-4">
         <div class="form-group">
       <b>Joining Date:</b>
       
         <%=f.date_field :joining_date,:value => Time.now.strftime('%Y-%m-%d'), class: "form-control"%>
       </div>

         <div class="form-group">
       <b>Category:</b>
       
         <%=f.select :employee_category_id, EmployeeCategory.all.collect {|b| [b.name,b.id]},{prompt:true},{class: "form-control"}%>
       </div>

        <div class="form-group">
          <b>Grade:</b>
       
         <%=f.select :employee_grade_id, EmployeeGrade.all.collect {|b| [b.name,b.id]},{prompt:true},{class: "form-control"}%>
       </div>

        <div class="form-group">
          <b>Gender:</b>
       Male<%= f.radio_button  "gender","Male", :checked => "checked" %>
          &nbsp;&nbsp;&nbsp;Female <%= f.radio_button  "gender","Female"%>
       </div>
    
         <div class="form-group">
           <b>Status:</b>
          Active<%= f.radio_button  "status","Active", :checked => "checked" %>
          &nbsp;&nbsp;&nbsp;Inactive <%= f.radio_button  "status","Inactive"%></td>
     </div>



        <div class="form-group">
         <b>Total Experience:</b>
       </div>
        <div class="form-group">
      <div class="col-sm-6"><%= select :employee, :experience_year, (0..20),{:prompt=>"year"},{class: "form-control"} %></div>
           <div class="col-sm-6"><%= select :employee, :experience_month, (0..11),{:prompt=>"month"},{class: "form-control"} %></div>
        </div>
    
</div>

      <div class="col-sm-1"></div>
      <div class="col-sm-4">

        <div class="form-group">
          <b>Department:</b>
         <%=f.select :employee_department_id, EmployeeDepartment.all.collect {|b| [b.name,b.id]},{prompt:true},{class: "form-control"}%>
       </div>

        <div class="form-group">
          <b>Position:</b>
         <%=f.select :employee_position_id,EmployeePosition.all.collect {|b| [b.name,b.id]},{prompt:true},{class: "form-control"}%>
       </div>

        
        <div class="form-group">
          <b>Job Title:</b>
       <%=f.text_field :job_title,placeholder: "Job Title",class: "form-control"%>
         </div>
 

        <div class="form-group">
            <b>Email:</b>
         <%=f.text_field :email,placeholder: "Email", class: "form-control"%>
       </div>

        
        <div class="form-group">
          <b>Qualification:</b>
         <%=f.text_field :qualification,placeholder: "Qualification", class: "form-control"%>
       </div>

        <div class="form-group">
        <b>Experience Information:</b>
         <%=f.text_field :experience_detail,placeholder: "Experience Detail", class: "form-control"%>
       </div>
  </div>
  <div class="col-sm-5 col-sm-offset-5"> 
      <div class="form-actions">               
        <%= f.submit 'Update', class: "btn btn-success"%>
      </div>
    </div>
  </fieldset>        
 <% end %>
</div>
</div>
</div>
</div>

    
   
 
