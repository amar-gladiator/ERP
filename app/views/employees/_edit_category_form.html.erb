<div class="modal-dialog">
<div class="modal-content">
<div class="modal-header">
  <h3><%= "Editing" %></h3>
</div>


<div class="modal-body">
<ul class="errors"></ul>
<%= form_for @employee_category,url:{:action=>'update_category',category_id: @employee_category.id},method: :patch,remote: true do |f|%>
 <table class="table" style="width:85%">
        <tr>
            <td class="col-2"><b>Name:</b></td>
            <td><%=f.text_field :name ,:style =>"width: 250px", class: "form-control"%></td>
        </tr>
        
        <tr>
            <td class="col-2"><b>prefix:</b></td>
             <td><%=f.text_field :prefix ,:style =>"width: 250px", class: "form-control"%></td>
        <tr>

        <tr><td class="col-2"><b>status:</b></td>
             <td><%= f.radio_button "status", "true", checked: "checked" %><%=f.label :Active%>
            <%= f.radio_button "status", "false"%><%=f.label :Inactive%></td>
        <tr>


        <td colspan="2" align="center"><%= f.submit 'Update', class: "btn btn-success"%>
        	<%= link_to 'Cancel', '#', class: "btn btn-default",data:{dismiss:"modal"}%></td>
        </tr>
    </table>
<% end %>

</div></div></div>