
<div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',dashboard_home_index_path %></li>
     <li><%= link_to 'Human Resources',employees_path %></li>
    <li><%= link_to 'HR Management',employee_management_employees_path %></li>
  
     <li>Employee admission(Step 1)</li>
  </ul>
</div>
Note:<font color="red">Fields Marked with * must be filled</font>
<div id="flash"><%= render 'layouts/messages'%></div>


<div class="row">
  <div class="box col-md-12">
    <div class="box-inner">
      <div class="box-header well">
        <h2>Step 1 - Employee details</h2>
       
      </div>
        <div class="box-content">
<%= form_for @employee  do |f| %>
    <fieldset>
    <% if @employee.errors.any? %>
        <div class="alert alert-danger" style="width:500px" >
          <h3>Error prohibited to from being saved:</h3>
          <ul>
           <% @employee.errors.full_messages.each do |msg| %>
              <li style="width:500px" align="left"><%= msg %></li>
            <% end %>
          </ul>
      
      </div>
          <% end %>
          <div class="row">
      <div class="col-sm-1"></div>
      <div class="col-sm-4">
         <div class="form-group">
       <%= t('Employee Number')%><span class="necessary-field">*</span>
         <%=f.text_field :employee_number,readonly: true,:value=> @employee.employee_number, class: "form-control"%>
       </div>

         <div class="form-group">
       <%= t('First Name')%><span class="necessary-field">*</span>
         <%=f.text_field :first_name,placeholder: "First Name", class: "form-control"%>
       </div>

        <div class="form-group">
       <%= t('Last Name')%><span class="necessary-field">*</span>
         <%=f.text_field :last_name,placeholder: "Last Name", class: "form-control"%>
       </div>

        <div class="form-group">
       <%= t('Gender')%>&nbsp;&nbsp;&nbsp;
       Male&nbsp;<%= f.radio_button  "gender","Male", :checked => "checked" %>
          &nbsp;&nbsp;&nbsp;Female&nbsp;<%= f.radio_button  "gender","Female"%>
       </div>

        <div class="form-group">
       <%= t('Department')%><span class="necessary-field">*</span>
         <%=f.select :employee_department_id, EmployeeDepartment.all.collect {|b| [b.name,b.id]},{prompt:true},{class: "form-control"}%>
       </div>

        <div class="form-group">
       <%= t('Category')%><span class="necessary-field">*</span>
         <%=f.select :employee_category_id, EmployeeCategory.all.collect {|b| [b.name,b.id]},{prompt:true},{class: "form-control"}%>
       </div>

         <div class="form-group">
       <%= t('Grade')%><span class="necessary-field">*</span>
         <%=f.select :employee_grade_id, EmployeeGrade.all.collect {|b| [b.name,b.id]},{prompt:true},{class: "form-control"}%>
       </div>

        <div class="form-group">
       <%= t('Qualification')%>
         <%=f.text_field :qualification,placeholder: "Qualification", class: "form-control"%>
       </div>

        <div class="form-group">
       <%= t('Total_Experience')%>
       </div>
        <div class="form-group">
      <div class="col-sm-6"><%= select :employee, :experience_year, (0..20),{:prompt=>"year"},{class: "form-control"} %></div>
           <div class="col-sm-6"><%= select :employee, :experience_month, (0..11),{:prompt=>"month"},{class: "form-control"} %></div>
        </div>

        <div class="form-group">
       <%= t('Marital-Status')%>
         <%=select :employee, :marital_status, [["Single"], ["Married"],["Divorced"]],{prompt:true},{class: "form-control"}%>
       </div>

     
        
         <div class="form-group">
       <%= t('Nationality')%>
         <%=f.select :country_id,Country.all.collect{|c| [c.name,c.id]},{prompt:true}, class: "form-control"%>
       </div>
       
</div>

      <div class="col-sm-1"></div>
      <div class="col-sm-4">

          <div class="form-group">
       <%= t('Joining Date')%><span class="necessary-field">*</span>
         <%=f.date_field :joining_date,:value => Time.now.strftime('%Y-%m-%d'), class: "form-control"%>
       </div>

         <div class="form-group">
       <%= t('Middle Name')%>
         <%=f.text_field :middle_name, :required=>false,placeholder: "Middle Name", class: "form-control"%>
       </div>

        <div class="form-group">
       <%= t('Email')%><span class="necessary-field">*</span>
         <%=f.text_field :email,placeholder: "Email", class: "form-control"%>
       </div>

        <div class="form-group">
       <%= t('Date of Birth')%><span class="necessary-field">*</span>
         <%=f.date_field :date_of_birth,:value => Time.now.strftime('%Y-%m-%d'), class: "form-control"%>
       </div>

        <div class="form-group">
       <%= t('Position')%><span class="necessary-field">*</span>
         <%=f.select :employee_position_id,EmployeePosition.all.collect {|b| [b.name,b.id]},{prompt:true},{class: "form-control"}%>
       </div>

        <div class="form-group">
       <%= t('Experience Detail')%>
         <%=f.text_field :experience_detail,placeholder: "Experience Detail", class: "form-control"%>
       </div>

        <div class="form-group">
       <%= t('Status')%>
         Active<%= f.radio_button  "status","Active", :checked => "checked" %>
          &nbsp;&nbsp;&nbsp;Inactive <%= f.radio_button  "status","Inactive"%>
       </div>

        <div class="form-group">
       <%= t('Father Name')%>
         <%=f.text_field :father_name,placeholder: "Father Name", class: "form-control"%>
       </div>
           <div class="form-group">
       <%= t('Mother Name')%>
         <%=f.text_field :mother_name,placeholder: "First Name", class: "form-control"%>
       </div>
        <div class="form-group">
       <%= t('Blood Group')%>
         <%=f.select :blood_group, ["A+", "A-", "B+", "B-", "O+", "O-", "AB+", "AB-"],{prompt:true},{class: "form-control"}%>
       </div>

        <div class="form-group">
       <%= t('Upload_photo')%>
         <%=f.file_field :image,class: "form-control"%>
       </div>

      
</div>
  <div class="col-sm-5 col-sm-offset-5"> 
      <div class="form-actions">               
        <%= f.submit 'Save', class: "btn btn-primary"%>
      </div>
    </div>
  </fieldset>        
 <% end %>
</div>
</div>
</div>
</div>

    
   
 
