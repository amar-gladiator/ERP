

<div class="box-inner">
  <div class="box-header well">
      <h2></h2>
  </div>
<div class="box-content">
<%= form_for :payslip,url:{action:'create_payslip_category',format:@employee}  do |f| %>
        
    <div class="row">
      <div class="col-md-12">
        <div class="col-md-1"></div>
          <div class="col-md-3">
              <b>Name:</b>
              <span class="necessary-field">*</span></h4>
          </div>
        <div class="col-md-6">
          <%=f.text_field :name,class: "form-control",style:"width:250"%>
        </div>
      </div>
    </div>



    <div class="row">
      <div class="col-md-12">
        <div class="col-md-1"></div>
          <div class="col-md-3">
              <b>Amount:</b>
          </div>
        <div class="col-md-6">
          <%=f.text_field :amount, :required=>false,class: "form-control",style:"width:250"%>
        </div>
      </div>
    </div>


    <div class="row">
      <div class="col-md-12">
        <div class="col-md-4"></div>
         <div class="col-md-8">
           <h4><%=f.check_box :is_deduction %> 
            &nbsp;&nbsp;
         <b>Is Deduction</b>
        </div>
      </div>
    </div>

 <div class="row">
      <div class="col-md-12">
        <div class="col-md-6"></div>
          <div class="col-md-5">
      <%=f.submit "Create",class: "btn btn-primary" %>
          </div>
          </div>
          </div>


<%end%>
</div>
</div>





