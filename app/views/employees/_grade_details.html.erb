<%if @grade1.empty? and @grade2.empty?%>
<h3><div align="center">No records</div></h3>
<%else%>
<table align="center" class="table table-hover table-bordered" style="width:800px">

	<tr class="tr-head"><th colspan="3">Active Grade</th>
    </tr>
	<tbody>
		<%@grade1.each do |c| %>
			<tr>
			<td class="col-3"><%=c.name%> (<%=c.priority%>)</td>
			 <td><%= link_to 'Edit',employees_edit_grade_path(c),remote:true%></td>
			 <td><%= link_to 'Delete',employees_destroy_grade_path(c),remote:true,method: :delete ,data: {confirm:"Are you sure to delete #{c.name}"}%></td>
			</tr>
		<%end%>
	 </tbody>
</table>
 
<table align="center" class="table table-hover table-bordered" style="width:800px">

	<tr class="tr-head"><th colspan="3">Inactive Grade</th>
    </tr>
	<tbody>
		<%@grade2.each do |c| %>
			<tr>
			<td class="col-3"><%=c.name%> (<%=c.priority%>)</td>
			<td><%= link_to 'Edit', employees_edit_grade_path(c),remote:true%></td>
			<td><%= link_to 'Delete' ,employees_destroy_grade_path(c),remote:true,method: :delete,data:{confirm:"Are you sure to delete #{c.name}"}%></td>	
			</tr>
		<%end%>
	 </tbody>
</table>
<%end%>