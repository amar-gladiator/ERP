<table class="table table-hover" align="center" style="width:900px">
<tbody>
<tr><td colspan="4" style="background-color:white"><h3>Personal Profile</h3></td></tr>
<tr>
    <td class="col-2">Date of Birth</td><td class="col-2"><%= @employee.date_of_birth%></td>
    <td colspan="2"></td>
</tr>
<tr>
    <td class="col-2">Marital-Status</td><td class="col-2"><%= @employee.marital_status%></td>
    <td colspan="2"></td>
</tr>
<tr>
    <td class="col-2">Father Name</td><td class="col-2"><%=@employee.father_name%></td>
    <td colspan="2"></td>
</tr>
<tr>
    <td class="col-2">Mother Name</td><td class="col-2"><%=@employee.mother_name %></td>
    <td class="col-2"></td>
</tr>
<tr>
    <td class="col-2">Blood Group</td><td class="col-2"> <%=@employee.blood_group%> </td>
    <td class="col-2"></td>
</tr>
<tr>
    <td class="col-2">Nationality</td><td class="col-2"> <%=@country%> </td>
    <td class="col-2"></td>
</tr>



<tr style="background-color:white">
<td colspan="4" align="center"><%= link_to 'Edit',employees_edit_personal_profile_path(@employee),class: "btn btn-primary" %>
<%= link_to 'PDF Report',employees_personal_profile_pdf_path(employee_id:@employee.id,format:"pdf"),class: "btn btn-success" %></td>
</tr>
</tbody></table>