<div>
  <ul class="breadcrumb">
   <li><%= link_to 'Home',dashboard_home_index_path %></li>
     <li><%= link_to 'Human Resources',employees_path %></li>
     <li><%= link_to 'Employee Search',search_employee_employees_path %></li>
    <li>Advance Search</li>
  </ul>
</div>
<div id="flash"><%= render 'layouts/messages'%></div>
<div class="row">
  <div class="col-md-2"></div>
       <div class="box col-md-8">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
                
            </div>
  <div class="box-content">
<%= form_for :search, url:{action:'advance_search_emp'}, method: :get do |f|%>
     <fieldset>
        <div class="col-sm-6">
            <div class="form-group">
        <%= f.label :employee_name %>
        <%=f.text_field :name, placeholder:'Empoyee Name', class: "form-control"%>
       </div>

       <div class="form-group">
           <%=f.label :Blood_Group%>
            <%=f.select :blood_group, ["A+", "A-", "B+", "B-", "O+", "O-", "AB+", "AB-"],{prompt:true},{class:"form-control"}%>
      </div>
      
      <div class="form-group"><%=f.label :Nationality%></td>
         <%=f.select :country_id,Country.all.collect{|c| [c.name,c.id]},{prompt:true},{class:"form-control"}%>
      </div>

      <div class="form-group">
        <%=f.label :joining_date %><span class="necessary-field">*</span>
          <%=f.date_field :joining_date,class:"form-control"%>
      </div>

      <div class="form-group">
      <%=f.label :Position%>
         <%= f.select :employee_position_id,EmployeePosition.all.collect {|b| [b.name,b.id]},{prompt:true},{class:"form-control"}%>
      </div>
       
            <div class="form-group">
        <%= f.label :gender%>
        <%=f.radio_button :gender,"All", :checked => "checked" %>All
          <%=f.radio_button :gender,"Male"%>Male
          <%=f.radio_button :gender,"Female"%>Female
        </div>
    </div>
      <div class="col-md-6">
        <div class="form-group">
         <%=f.label :Date_of_Birth%>
        <%=f.date_field :date_of_birth,class:"form-control"%>
        </div>

       <div class="form-group">
        <%=f.label :"Marital-Status"%>
      <%=f.select :marital_status, ["single","married","divorced"],{prompt:true},{class:"form-control"}%>
      </div>

      <div class="form-group">
       <%=f.label :Category%>
         <%= f.select :employee_category_id, EmployeeCategory.all.collect {|b| [b.name,b.id]},{prompt:true},{class:"form-control"}%>
      </div>

      <div class="form-group">
         <%=f.label :Department%>
         <%= f.select :employee_department_id, EmployeeDepartment.all.collect {|b| [b.name,b.id]},{prompt:true},{class:"form-control"}%>
      </div>
        <div class="form-group">
      <%=f.label :Grade%>
         <%= f.select :employee_grade_id, EmployeeGrade.all.collect {|b| [b.name,b.id]},{prompt:true},{class:"form-control"}%>
</div>

   <div class="form-group">
      <%= f.label :status%>:&nbsp;
        <%= f.radio_button :status,"present"%>Present&nbsp;&nbsp;
          <%= f.radio_button  :status,"former"%>Former&nbsp;&nbsp;
          <%= f.radio_button  :status,"all",:checked => "checked"%>All
         </div>
         </div>

       <div align="center"><%= f.submit 'Search', class: "btn btn-primary"%></div>
  
 
  </fieldset>
  </div>
  </div>
  </div>
  </div>
<%end%>
 <div id="user_search"></div>
