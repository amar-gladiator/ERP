<div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',home_dashboard_path %></li>
     <li>Employee Details</li>
  </ul>
</div>
Note:<font color="red">Fields Marked with * must be filled</font>
<div id="flash"><%= render 'layouts/messages'%></div>


<div class="row">
  <div class="box col-md-12">
    <div class="box-inner">
      <div class="box-header well">
        <h2>Step 2 - Employee details</h2>
       
      </div>
        <div class="box-content">
<%= form_for @employee,url:{action: 'admission2_create',format: @employee.id},method: :patch do |f| %>
    <fieldset>
    <% if @employee.errors.any? %>
        <div class="alert alert-danger" style="width:500px" >
          <h3>Error prohibited to from being saved:</h3>
          <ul>
           <% @employee.errors.full_messages.each do |msg| %>
              <li style="width:500px" align="left"><%= msg %></li>
            <% end %>
          </ul>
      
      </div>
          <% end %>
            <b><u>Home Address</u></b>
          <div class="row">
      <div class="col-sm-1"></div>
      <div class="col-sm-4">
         <div class="form-group">
     
         </div>

         <div class="form-group">
       <%= t('Line1')%><span class="necessary-field">*</span>
         <%=f.text_field :home_address_line1,placeholder: "Line1", class: "form-control"%>
       </div>

        <div class="form-group">
       <%= t('City')%><span class="necessary-field">*</span>
         <%=f.text_field :home_city, :required=>false,placeholder: "City", class: "form-control"%>
       </div>

        <div class="form-group">
       <%= t('Country')%>
     <%= f.select :home_country_id,Country.all.collect{|c| [c.name,c.id]},{prompt:true},{class: "form-control"}%>
        </div>
    </div>
     
      <div class="col-sm-1"></div>
      <div class="col-sm-4">
           <div class="form-group">
           </div>
        <div class="form-group">
       <%= t('Line2')%>
         <%=f.text_field :home_address_line2,placeholder: "Line2", class: "form-control"%>
       </div>
 
       <div class="form-group">
       <%= t('State')%><span class="necessary-field">*</span>
         <%=f.text_field :home_state,placeholder: "State", class: "form-control"%>
       </div>

       <div class="form-group">
       <%= t('Pin Code')%><span class="necessary-field">*</span>
         <%=f.text_field :home_pin_code,placeholder: "Pin Code", class: "form-control"%>
       </div>
</div>
</div>
<hr/>
   <b><u>Office Address</u></b>

       <div class="row">
      <div class="col-sm-1"></div>
      <div class="col-sm-4">
          <div class="form-group">
       <%= t('Line1')%>
         <%=f.text_field :office_address_line1,placeholder: "Line1", class: "form-control"%>
       </div>

         <div class="form-group">
       <%= t('City')%>
         <%=f.text_field :office_city, :required=>false,placeholder: "City", class: "form-control"%>
       </div>

         <div class="form-group">
       <%= t('Country')%>
         <%=f.select :office_country_id,Country.all.collect{|c| [c.name,c.id]},{prompt:true}, {class: "form-control"}%>
       </div>
       </div>
         <div class="col-sm-1"></div>
      <div class="col-sm-4">
           <div class="form-group">
       <%= t('Line2')%>
         <%=f.text_field :office_address_line2,placeholder: "Line2", class: "form-control"%>
       </div>

          <div class="form-group">
       <%= t('State')%>
         <%=f.text_field :office_state,placeholder: "State", class: "form-control"%>
       </div>

          <div class="form-group">
       <%= t('Pin Code')%>
         <%=f.text_field :office_pin_code,placeholder: "Pin Code", class: "form-control"%>
       </div>
   </div>
   </div>
  <hr/> <b><u>Contact Details</u></b>
      <div class="row">
      <div class="col-sm-1"></div>
      <div class="col-sm-4">
       
            <div class="form-group">
       <%= t('Office Phone1')%>
         <%=f.text_field :office_phone1, placeholder: "Office Phone1", class: "form-control"%>
       </div>
          <div class="form-group">
       <%= t('Mobile Phone')%>
         <%=f.text_field :mobile_phone,placeholder: "Mobile Phone", class: "form-control"%>
       </div>
            <div class="form-group">
       <%= t('Fax')%>
         <%=f.text_field :fax,placeholder: "Fax", class: "form-control"%>
       </div>
       </div>

           <div class="col-sm-1"></div>
      <div class="col-sm-4">

      <div class="form-group">
       <%= t('Office Phone2')%>
         <%=f.text_field :office_phone2, :required=>false,placeholder: "Office Phone2", class: "form-control"%>
       </div>

            <div class="form-group">
       <%= t('Home Phone')%>
         <%=f.text_field :home_phone,placeholder: "Home Phone", class: "form-control"%>
       </div>
       </div>

<div class="col-sm-5 col-sm-offset-5"> 
      <div class="form-actions">               
        <%= f.submit 'Save', class: "btn btn-primary"%>
      </div>
    </div>
  </fieldset>        
 <% end %>
</div>
</div>
</div>
</div>







    
   
 
