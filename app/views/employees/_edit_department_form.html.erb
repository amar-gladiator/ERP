<div class="modal-dialog">
<div class="modal-content">
<div class="modal-header">
  <h3><%= "Editing" %></h3>
</div>


<div class="modal-body">
<ul class="errors"></ul>
<%= form_for @employee_department,url:{:action=>'update_department',id: @employee_department.id},method: :patch,remote: true do |f|%>
 <table class="table" style="width:85%">
        <tr>
            <td class="col-2"><b>Name:</b></td>
            <td><%=f.text_field :name ,:style =>"width: 250px", class: "form-control"%></td>
        </tr>
        
        <tr>
            <td class="col-2"><b>Code:</b></td>
             <td><%=f.text_field :code ,:style =>"width: 250px", class: "form-control"%></td>
        <tr>

       <tr><td class="col-2"><b>Status:</b></td>
             <td><%= f.radio_button "status", "true", checked: "checked" %><b>Active</b>
            <%= f.radio_button "status", "false"%>
            <b>Inactive</b></td>
        <tr>


        <td colspan="2"><%= f.submit 'Update', class: "btn btn-primary"%>
        	<%= link_to 'Cancel', '#', class: "btn btn-default",data:{dismiss:"modal"}%></td>
        </tr>
    </table>
<% end %>

</div></div></div>