<tbody>
<tr><td colspan="4" style="background-color:white"><h3>Bank Info</h3>
</td></tr>
<% unless @bank_details.empty? %>
  <% @bank_details.each do |b| %>
    <%  code = cycle('even', 'odd') %>
  <tr class="<%= code %> left"><td><%= b.bank_field.name %></td><td class="right"><%= b.bank_info%></td></tr>
  <% end %>
  <%end%>

<tr style="background-color:white">
<td colspan="4" align="center"><%= link_to 'Edit',employees_edit_bank_info_path(@employee),class: "btn btn-primary" %>
<%= link_to 'PDF Report',employees_bank_info_pdf_path(employee_id:@employee.id,format:"pdf"),class: "btn btn-success" %></td>
</tr>
</tbody></table>
</div>