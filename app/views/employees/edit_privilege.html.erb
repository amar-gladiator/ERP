
<div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',dashboard_home_index_path%></li>
     <li><%= link_to 'Human Resources',employees_path %></li>
    <li><%= link_to 'HR Management',employee_management_employees_path %></li>
    <li>Edit Privileges</li>
 </ul>
 </div>
<div id="flash"><%= render 'layouts/messages'%></div>


<%= form_for :edit_privilege ,url:{action:'update_privilege',format: @employee.id} do |f| %>
<table align="center" class="table table-hover" style="width:100%">
<tbody>    
   	<tr><td class="col-4"><%= "Set Privilege for "+@employee.first_name%></td></tr>
     <tr class="tr-head"><td colspan="4"><%=f.submit "Update",class: "btn btn-primary" %></td></tr>
</tbody>
</table>

<div class="sel-list">
            <%= t('select') %>: <%= link_to 'all','#',{onclick:"
              event.preventDefault();
              $('.check_box').prop('checked', true);"}%>,
            <%= link_to 'none','#',{onclick:"
              event.preventDefault();
              $('.check_box').prop('checked', false);"}%>
          </div>
<table align="center" class="table table-hover" style="width:100%">
    <tbody>
     <%@privilege_tags.each do |p_t|%>
     <tr>
          <td><%= check_box_tag "privilege[]",p_t.id,false,class: "check_box"%></td>
          <td><%=p_t.name_tag%></td>
     </tr>
     <%end%>
     </tbody>
</table>
<%end%>

</div>
