<div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',dashboard_home_index_path %></li>
    
    <li><%= link_to 'News', newscasts_path%></li>
    <li>Add News</li>
  </ul>
</div>
<div id="flash"><%= render 'layouts/messages'%></div>
<br/>

<div class="row">
  <div class="col-md-2"></div>
    <div class="box col-md-6">
      <div class="box-inner">
        <div class="box-header well" data-original-title="">
            <h2>Add News</h2>
        </div>
      <div class="box-content">
        <%= form_for :newscast, url: newscasts_path do |f| %>

        <fieldset>
          <% if @newscast.errors.any?%>
            <div class="alert alert-danger alert-dismissable">
            <h4>Errors prohibited to being Save:</h4>
           <ul>
          <% @newscast.errors.full_messages.each do |msg| %>
          <li style="width:300px"><%= msg%></li>
          <% end %>
        </ul> 
            </div>  
          <%end%>
        <div class="col-sm-7 col-sm-offset-1">

            <div class="form-group">
              <b>Title:</b>
              <%=f.text_field :title, class: "form-control", style: "width: 350px", placeholder: "News Title"%>
            </div>
              
              <div class="form-group">

               <b>Content:</b>
               <%=f.text_area :content,style: 'width:350px;height:200px', placeholder: "News Content", class: "form-control col-sm-7"%>
              </div> 

              <div class="row">
              <div class="col-sm-offset-6"> 
                <div class="form-group">  
                   <br>
                <%= f.submit 'Publish News', class: "btn btn-primary"%>
                </div>
            </div></div>
                
              </div>
            </fieldset>
            <% end %>
            </div>
        </div>
    </div>
</div>