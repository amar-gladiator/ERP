<div id="content-header">
  <h1>Students</h1>
  <h3>Categories</h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png",:border => 0), 'setting' %>
  </div>
</div>

<div id="page-yield">
 <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  
  <div class="box">
   
   <%= form_for :category, url:  categories_path do |f| %>
        <% if @category.errors.any? %>
            <div id="error_explanation">
            <h2><%= pluralize(@category.errors.count, "error") %> prohibited this categary from being saved:</h2>
            <ul><% @category.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
            </ul>
            </div>
        <% end %>

        <div><%= f.label :enter_new_category %>
             <%= f.text_field :name ,:style =>"width: 310px", :placeholder=>"course" , class: "form-control", :required=>true%>
           <%= f.submit 'Create',class: "btn btn-primary"%></div>
<%end%>
</div></div>

      <table align="center" class="table" style="width:500px">
      
        <tr class="tr-head"><th>Student Category</th>
        <th></th><th></th>
        </tr>
        <%@categorys.each do |cat| %> 
        <tr>

          <td><%= cat.name%></td>
          <td><%= link_to 'Edit', edit_category_path(cat) %></td>
          <td><%= link_to 'Delete', category_path(cat),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>

          </tr>
        <% end %>
      </table>