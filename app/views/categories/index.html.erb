<div class="continer">
<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10">
    <div class="page-header" style="height:10%">
    <div class="row">
      <div class="col-md-6"><h2>Student Category</h2></div>
      <div class="col-md-6"><a href="/setting"><button class="btn btn-success pull-right" style="margin-top:20px">Back</button></a></div>   
    </div>
  
    </div>

  </div>
  <div class="col-md-1"></div>
</div>
