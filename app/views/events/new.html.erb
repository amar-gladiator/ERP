<div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',dashboard_home_index_path %></li>
    <li><%= link_to 'Calendar','/calender'%></li>
    <li>Create New Event:Step-1</li>
  </ul>
</div><div id="flash"><%= render 'layouts/messages'%></div>

<br>
<div class="row">
<div class="col-md-2"></div>
  <div class="box col-md-7">
    <div class="box-inner">
      <div class="box-header well">
        <h2> New Event Create</h2>
       
      </div>
        <div class="box-content">
        <fieldset>
        <div class="col-md-1"></div>
  <div class="box col-md-6">
     <%= form_for :event ,url:{action:'create'} do |f| %>
        <div class="form-group">
        <%=f.label :start_date%>
        <%=f.date_field :start_date ,value: @start_date,readonly:true,:id=>'datetimepicker2',class: "form-control",style: "width: 350px"%>
        </div>

          <div class="form-group">
          <%=f.label :end_date%>
          <%=f.date_field :end_date ,value: @start_date,:id=>'datetimepicker2',class: "form-control",style: "width: 350px"%></div>

       <div class="form-group">

          <%= f.label :title %>
          <%= f.text_field :title,class: "form-control",style: "width: 350px" %>

                </div>
 <div class="form-group">

<%=f.label :Description %>
<%=f.text_field :description ,class: "form-control",style:"width: 350px" %>

</div>
<div class="form-group">
    <%= f.check_box :is_holiday, {:checked=>false}%> 

        <%= label_tag(:is_holiday, "Holiday") %>
        </div>
        
        <div class="form-group">
<%= f.check_box :is_common, {:checked=>false}%> 
        <%= label_tag(:is_common, "Event common to all") %>
        </div>
        <div class="form-group">
   <%= f.submit :'Create Event',class: "btn btn-primary"%>
</div>
  <% end %>
  </div>
   
  </fieldset>
  </div>
  </div>
  </div>
  </div>
