<h1 align="center">GradingLevles</h1>


<%=form_for ([@batch,@grading_level]) do|f|%>
<%= select("batch1","batch_id",Batch.all.collect{|p| [p.name,p.id]})%>
<%= link_to 'Add Grades',new_batch_grading_level_path ,class: "btn btn-primary pull-right"%>

<input type="hidden" id="selectpath" value='<%=new_batch_grading_level_path(@batch.id)%>'>



   <table class="table" style="width:500px">  
    <tr>
        <th>Name</th>
        <th>Min Score</th>
        <th>Description</th>
    </tr>
    <% @grading_levels.each do |gradinglevel| %>
       <tr>
            <td><%= gradinglevel.name %></td>
            <td><%= gradinglevel.min_score %></td>
