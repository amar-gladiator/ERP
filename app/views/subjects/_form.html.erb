<div class="modal-body">
    <ul class="errors"></ul>
    <%= form_for [@batch,@elective_group, @subject],remote: true do |f|%>
        
        <div class="form-group">
            <%= f.label :name %>
            <%=f.text_field :name, class: "form-control"%>
        </div>
        <div class="form-group">
            <%= f.label :code %>
            <%=f.text_field :code, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :max_weekly_classes %>
            <%=f.text_field :max_weekly_classes, class: "form-control"%>
        </div>
        <div class="form-group">
            <%=f.check_box :no_exams%> <%= f.label :no_exams %>
        </div>

    <div class="modal-footer">
        <%= f.submit 'Submit', class: "btn btn-primary"%>
        <%= link_to 'Close', '#', class: "btn btn-default", :'data-dismiss'=>"modal"%>
    </div>
<% end %>
</div>