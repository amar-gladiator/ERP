
<div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',home_dashboard_path %></li>
     <li><%=link_to 'Step 1',students_admission1_path%></li>
      <li><%=link_to 'Step 2',students_admission2_path(@student.id)%></li>
       <li><%=link_to 'Step 2.1',students_admission2_1_path(@student.id)%></li>
     <li>Admission(Step 3 - Emergency Contact)</li>
  </ul>
</div>
<div id="flash"><%= render 'layouts/messages'%></div>
<div class="row">
  <div class="box col-md-12">
    <div class="box-inner">
      <div class="box-header well">
        <h2>Step 3 - Emergency Contact</h2>
       
      </div>
        <div class="box-content">
         <h4>Select one of the contact for Emergency Contact</h4>
   	<%= form_for @student, url:{action:'update_immediate_contact'},method: :patch do |f| %>
   	<%= hidden_field_tag :id,@student.id %>	
	<% @student.guardians.each do|g|%>
      <%= f.radio_button "immediate_contact",g.id, :checked =>true%>
			 <%= g.first_name+" "+g.last_name+" - "+g.relation %>
	<%end%>
   
   <div class="row">
      <div class="col-sm-1"></div>
        <div class="col-sm-4">
      <div class="form-actions">               
       <%= f.submit 'Finish',class: "btn btn-primary"%>
          </div>
          </div>
</div>
</div>
<%end%>
</div>
</div>
</div>


