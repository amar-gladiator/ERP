<div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',dashboard_home_index_path %></li>
    <li>Student Details</li>
  </ul>
</div><div id="flash"><%= render 'layouts/messages'%></div>

<div class="row">
  <div class="col-md-12">
    <div class="pull-right">
      <%= link_to 'View All','students/view_all', class: "btn btn-primary-link btn-xs" %>
      <%= link_to 'Advanced Serach','students/advanced_search', class: "btn btn-primary-link btn-xs" %>
    </div>
  </div>
</div>
<hr>


<div class="row">
  <div class="col-md-2"></div>
    <div class="box col-md-10">
  
  <%= form_for :student, url:{action:'search_ajax'}, method: :get,remote:true,
					html:{id: "student_form"} do |f|%>
        <fieldset>

            <%= text_field_tag :search,"",{oninput:"$('#student_form').submit();",placeholder:'Search Student',class:"form-control",style: "width: 300px"}%>
          <br>
			   	<%= f.radio_button  "status","present", :checked => "checked" %> &nbsp;<b>Present Students</b>
			   	&nbsp;&nbsp;&nbsp;
			   	<%= f.radio_button  "status","former"%>  &nbsp;<b>Former Students</b>
			 	

 	</fieldset>
  <% end %>
</div>
</div>
<div id="student_search"></div>