<div id="content-header">
  <h1>Student info</h1>
  <h3>Student profile</h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png",:border => 0), "" %>
  </div>
</div>

<div id="inner-tab-menu">
  <ul>
      <li><%= link_to 'Reports', students_report_path%></li>
      <li><%= link_to "Guardians", ''%></li>
      <li><%= link_to "Send email",students_email_path(@student) %></li>
     <li><%= link_to "Delete", students_remove_path(@student)%></li>
  </ul>
</div>

<div id="page-yield">

  <% unless flash[:notice].nil? %> <p class="flash-msg"> <%= flash[:notice] %> </p> <% end %>

<table class="table" align="center" style="width:900px">
<thead style="background-color:white">
<tr>
    <th colspan="2"><div id="profile_picture_display">
    <% unless @student.photo_data.blank? %>
      <%= image_tag @student.image.url(:medium) %>
      <% else %>
          <%= image_tag "master_student/profile/default_student.png" %>
      <% end %>
    </div></th>
    <th colspan="2"><div id ="student_main_info">
      <h3> <%= @student.first_name %> <%= @student.middle_name %> <%= @student.last_name %>  </h3>
      <h4> Course : <%= @student.batch.course.course_name %> </h4>
      <h4> Batch : <%= @student.batch.name %> </h4>
      <h4> Adm no. : <%= @student.admission_no %> </h4></div>
   </th>
  </tr>
</thead>
<tbody>
<tr><td colspan="4" style="background-color:white"></td></tr>
<tr>
    <td>Admission Date </td><td><%= @student.admission_date %></td>
    <td colspan="2"></td>
</tr>
<tr>
    <td>Date of birth</td><td><%= @student.date_of_birth%></td>
    <td colspan="2"></td>
</tr>
<tr>
    <td>Blood group</td><td><%= @student.blood_group %></td>
    <td colspan="2"></td>
</tr>
<tr>
    <td>Gender</td><td><%= @student.gender %></td>
    <td>Nationality</td><td><%= @student.nationality.name %></td>
</tr>
<tr>
    <td>Language</td><td> <%= @student.language %> </td>
    <td>Category</td><td> <%= @student.category.name %> </td>
</tr>
<tr>
    <td>Religion</td><td> <%= @student.religion %> </td>
    <td>Address</td><td> <%= @student.address_line1+" "+@student.address_line2 %> </td>
</tr>
<tr>
    <td>City</td><td><%= @student.city %> </td>
    <td>State</td><td> <%= @student.state %> </td>
</tr>
<tr>
    <td>Country</td><td> <%= @student.country.name %> </td>
    <td>Phone</td><td>  <%= @student.phone1 %>  </td>
</tr>
<tr>
    <td>Mobile</td><td><%= @student.phone2 %> </td>
    <td>Email</td><td> <%= @student.email %> </td>
</tr>
<tr style="background-color:white">
<td colspan="4"><%= link_to 'Edit',edit_student_path(@student),class: "btn btn-primary" %>
<%= link_to 'PDF Report',students_profile_pdf_path(@Student),class: "btn btn-success" %></td>
</tr>
</tbody></table>
</div>