<div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',home_dashboard_path %></li>
     <li><%= link_to 'Student Details','/students' %></li>
      <li><%= link_to 'Student Profile',students_profile_path(@student.id)%></li>
       <li><%= link_to 'Reports Center',students_report_path(@student.id)%></li>
        <li>Student Attendance Report</li>


  </ul>
</div><div id="flash"><%= render 'layouts/messages'%></div>


<div class="row">
  <div class="col-md-2"></div>
    <div class="box col-md-6">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
                <h2>Attendance Report
                </h2>
            </div>

            <div class="box-content">

        <%= form_for :report, :url=>{:action=>'genrate_report'},method: :get,remote: :true do |f|%>
        <fieldset>
  <%= f.hidden_field :student_id,value:@student.id%>
 <div class="col-sm-7 col-sm-offset-1">
                  <div class="form-group">
  <%= f.label :select_subject %>
     
      <%= f.select :subject_id, @subjects.collect {|s| [s.name,s.id]},{prompt:true},class: "form-control", style: "width: 350px" %>
      </div>

 <div class="form-group">
       <%= f.label :select_start_date %>
     
      <%= f.date_field :start_date,:style =>"height: 30px",class: "form-control", style: "width: 350px" %>
      </div>

 <div class="form-group">
       <%= f.label :select_end_date %>
      
      <%= f.date_field :end_date,:style =>"height: 30px",class: "form-control", style: "width: 350px" %>
      </div><br/>
<div class="col-sm-7 col-sm-offset-6"> 
                <div class="form-actions">               
                <%= f.submit 'View', class: "btn btn-success"%>
                </div>
            </div>
                
              </div>
            </fieldset>



<% end %>

</div>
</div>
</div>
<br>
<div class="col-md-3">
           
           <div id="attendance_report"></div>
     
      </div>
      </div>

