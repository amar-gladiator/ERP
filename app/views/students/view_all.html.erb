<div id="content-header">
  <h1>Student Details</h1>
  <h3>View Details</h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png",:border => 0), "" %>
  </div>
</div>

<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

 	<div align="center">
		<%= form_for :batch, url:{action:'select'},method: :get,remote:true do |f| %>
		<%= f.label :select %>
	    <%= f.select :id, @batches.collect {|b| [b.course.course_name+" "+b.course.section_name+" - "+b.name,b.id]},prompt:true%>
	    <%= f.submit "GO"%>
		<% end %>
	</div>
		 
<div class="col-md-4"></div> 	
				
