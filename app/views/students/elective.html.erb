<div id="content-header">
  <h1>Student</h1>
  <h3>Electives</h3>
<div id="app-back-button">
    <%= link_to image_tag("buttons/back.png",:border => 0), elective_groups_elective_subject_path(@subject.elective_group) %>
  </div>
 <div><%= image_tag("underline.jpg",width: "100%")%></div>
</div>
<div id="page-yield">

 <div class="box">
   <div class="bread_crumb">
    <%= link_to "Batch "+@subject.elective_group.batch.name, batches_display_path(@subject.elective_group.batch)%> &raquo;
 	<%= link_to "Elective Group "+@subject.elective_group.name ,batches_subjects_subject_path(@subject.elective_group.batch)%> &raquo;
 	<%= link_to "Elective Subject "+@subject.name,elective_groups_elective_subject_path(@subject.elective_group)%> &raquo; Assign Students
        </div></div><br/>

<ul id="category-list">
<div class="linker">
<%= link_to "Assign All" %>
  <%= link_to "Remove All" %></div>
  <% @students=@subject.elective_group.batch.students.all %>
  <% @students.each do |s| %>
  <li id="stud_<%=s.id%>" class="list<%=cycle('odd', 'even')%>" style="height:30px">
    <% stud_assigned = StudentSubject.new() %>
    <% assigned = stud_assigned.student_assigned(s.id,@subject.id) %>
   <div class="category-name"> <%= s.first_name+" "+s.last_name %></div>
    <% unless assigned.nil? %>
  <%= link_to "Remove",'',class: "category-edit"%>
      <% else %>
  <%= link_to "Assign",'',class: "category-edit"%>
        <% end %>
  </li>
  <% end %>
</ul>

</div>