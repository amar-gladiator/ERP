<div id="content-header">
  <h1>Batch Transfer</h1>
  <h3>Home</h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png",:border => 0), batches_path %>
  </div>
</div>

 
<div id="page-yield">
   <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

<div>
<%= form_for :batch_transfer, url: batch_transfers_path do |f| %>
Select Course
<%= select("course1","id",Course.all.collect{|p| [p.course_name,p.id]},prompt:true)%>
</div>

 <div id="stage">      
 </div>
</div>
<script type="text/javascript">
   $(document).ready(function() {
      $("#course1_id").change(function(event){

            var a = $("#course1_id").val();
           $.ajax( {
             url:'/batch_transfers/'+a,
             success:function(data) {
                $('#stage').html(data);
             }
          });
      });
   });
</script>
<% end %>
 
 