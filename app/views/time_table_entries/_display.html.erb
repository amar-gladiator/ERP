<div class="row">
  <div class="box col-md-12">
  <div class="box-inner">
    <div class="box-header well">
      <h2>Time Table</h2>
    </div>
    
<% if @class_timing.present? %>
    <div class="box-content">
 <table id="datatable" class="table table-striped table-bordered responsive">
    <tr>
    <td class="col-4"></td>
     <%  @class_timing.each do |c|%>
     <th><%=c.start_time.strftime("%I:%M %p")+"-"+c.end_time.strftime("%I:%M %p")%></th>
      <% end %>
    </tr> 
 
<% @batch.weekdays.reverse_each do |w|%>
      <tr>
        <th><%=w.weekday%></th>
        <% @class_timing.each do |c|%>
         <% @present=TimeTableEntry.find_by_class_timing_id_and_weekday_id_and_time_table_id(c.id,w.id,@time) %>
        <td>
        <%unless @present.nil? %>
         <font color="red"><%= @present.subject.name %></font><br/>
       <font color="blue"><%= @present.employee.first_name+" "+@present.employee.last_name%></font><br/>
        <div id="image">
        <%=link_to image_tag("uploadify-cancel.png",width:"10%"),time_table_entries_delete_time_path(@present), method: :delete, data:{ confirm: "Are you sure to delete"},remote:true%></div>
        <%else%>
     <%=button_tag "Assign Here",{onclick:"
       $('#timing_id').val(#{c.id});
       $('#weekday_id').val(#{w.id});
         $('#time_table_id').val(#{@time});
       $('#subject_id').val( $('#sub_subject_id option:selected').val());
        $('#create_time_form').submit();"}%></td>
        <%end%>
      <%end%>
      </tr>
    <% end %>

  </table>
<div class="row">
  <div class="col-md-12">
 <%= form_for :sub,url:{action:'select_subject'},method: :get,remote:true,html:{id:"em"} do |f| %>

 <%= f.select :subject_id,@subjects.collect {|b| [b.name,b.id,"#{b.id}"]},{prompt:'Select Subject'},{
  onchange: "$('#em').submit();",class: "form-control",style:"width:350px"}%>
<%end%>
<br/>
<div id="emp_div"></div>

<%else%>
<h4>Yet class timing are not assigned for this batch,Assign from Set class timings</h4>
<%end%>
</div>
</div>
</div>
</div>
</div>
</div>

