<% if @users.nil? or @users.empty? %>
  <div id="user_no_result">No users found</div>
<% else %>
  <div class="students-table">
    <table id="listing" align="center" width="60%" cellpadding="1" cellspacing="1">
      <tr class="tr-head">
        <td class="col-1">
          Sl no.
        </td>
        <td class="col-2">
          Name
        </td>
        <td class="col-2">
         Username
        </td>
        <td class="col-3">
        Role
        </td>
        <td class="col-3"></td>
         <tr class="tr-blank"></tr>
      <% @users.each_with_index do |user,i| %>
        <tr class="tr-<%= cycle('odd', 'even') %>">
          <td class="col-1">
            <%= i+1 %>
          </td>
          <td class="col-2">
      <%=  user.first_name + " " + user.last_name %>
          </td>
          <td class="col-2">
            <%= user.username %>
          </td>
          <td class="col-3">
          <%= user.role %>
          </td>
          <td class="col-3">
            <%= link_to 'View Profile' ,user_path(user)%>
          </td>

        </tr>
      <% end %>
    </table>
  </div>
<% end %>