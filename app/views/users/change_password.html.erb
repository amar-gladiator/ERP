<div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',dashboard_home_index_path %></li>
    <li><%= link_to 'Manage User',users_path %></li>
    <li><%= link_to 'User Profile',user_path%></li>
    <li>Change Password</li>
  </ul>
</div><div id="flash"><%= render 'layouts/messages'%></div>
<div class="row">
 <div class="box col-md-2"></div>
  <div class="box col-md-6">
  <div class="box-inner">
    <div class="box-header well">
      <h2>Change Password</h2>
    </div>
<br>
    <div class="box-content">
    <fieldset>
    <%= form_for @user,url:{action: 'update_password',id: @user.id},method: :patch do |f| %>
    <% if @user.errors.any? %>
    <div class="alert alert-danger">
    <h4>Errors prohibited to being saved:</h4>
    <ul><% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %></ul>
    </div>
  <% end %>
<div class="row">
  <div class="col-sm-7 col-sm-offset-1">
  <div class="form-group">
    <b>New Password:</b>
     <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder:'New Password',class: "form-control",style: "width: 300px" %>
    </div>
    <div class="form-group">
      <b>Confirm New Password:</b> 
    <%= f.password_field :password_confirmation, autocomplete: "off",placeholder:'Confirm Password',class: "form-control",style: "width: 300px" %>
    </div>
  <br>
    <div class="form-group">
      <div align="center">
        <%= f.submit "Update",class: "btn btn-success" %>
      </div>
    </div>
  <% end  %>
 </div>
 </div>
 </fieldset>
 </div>
 </div>
 </div>
 </div>