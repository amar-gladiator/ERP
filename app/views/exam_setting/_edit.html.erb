<div class="modal-dialog">
<div class="modal-content">
<div class="modal-header">
  <h3><%= "Editing" %></h3>
</div>

<div class="modal-body">
        <ul class="errors"></ul>
<%= form_for [@course,@class_des1],url:{:action=>'update',course_id:@course.id,class_des:@class_des1.id},method: :patch,remote: true do |f|%>


<div class="form-group">
  <b>Name:</b>
  <%=f.text_field :name ,style: "width: 250px", class: "form-control"%>
</div>

<div class="form-group">
  <b>Marks:</b>
  <%=f.text_field :marks,style: "width: 250px", class: "form-control"%>
</div>

<div class="form-group">
<%= f.submit 'Submit', class: "btn btn-primary"%>
&nbsp;&nbsp;
<%= link_to 'cancel', '#', class: "btn btn-default",data:{dismiss:"modal"}%>
        </div>
<% end %>
</div>
</div></div>