<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h3><%= "Edit Asset" %></h3>
    </div>

    <div class="modal-body">
      <ul class="errors"></ul>
      <%= form_for @asset,url:{action: 'update_asset',id:@asset.id},method: :patch,remote: true do |f|%>
        <table class="table">
          <tr>
            <td class="col-2"><b>Title:</b></td>
            <td><%=f.text_field :title ,:style =>"width: 250px", class: "form-control"%></td>
          </tr>
          <tr>
            <td class="col-2"><b>Description:</b> </td>
            <td><%=f.text_field :description ,:style =>"width: 250px", class: "form-control"%></td>
          </tr>
          <tr>
            <td class="col-2"><b>Amount:</b> </td>
            <td><%=f.text_field :amount ,:style =>"width: 250px", class: "form-control"%></td>
          </tr>
          <tr>
            <td></td>
            <td class="col-2"><%=f.check_box :is_inactive%>&nbsp;&nbsp;<b>Make Asset Inactive?</b></td>
          </tr>
          <tr>
            <td colspan="2"><%= f.submit 'Save', class: "btn btn-success"%>
            <%= f.submit 'Cancel', class: "btn btn-default"%>
            </td>
          </tr>
        </table>
      <%end%>
    </div>
  </div>
</div>