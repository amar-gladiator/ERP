<div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',home_dashboard_path %></li>
    <li><%= link_to 'Finance',finance_index_path %></li>
    <li><%= link_to 'Manage Fees',finance_fees_path %></li>
    <li><%= link_to 'Fees Submission',finance_fees_submission_path %></li>
    <li><%= link_to 'Fees submission for stunents',finance_fees_submission_student_path %></li>
    <li>Student</li>
  </ul>
</div>
<div id="flash"><%= render 'layouts/messages'%></div>
<div class="box-content">
  <fieldset>
    <div class="row">
      <div class="col-sm-1"></div>
      <div class="col-sm-4">
        <div class="form-group">
          <%= t('Fee collection date')%><span class="necessary-field">*</span>
          <%= select :collection,:id, @collections.collect {|c| [c.name+" "+c.created_at.to_date.to_s,c.id]},{prompt:true},{onchange:"var a={collection_id: $('#collection_id').val(),student_id:#{@student.id}};$.get('student_fees_submission',a,function(response){});",class: "form-control"}%>
        </div>
      </div>
    </div>
  </fieldset>        
</div>
<div id="fees"></div>