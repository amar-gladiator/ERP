<div id="content-header">
  <h1>Fees</h1>
  <h3>@collection Details</h3>
    <div id="app-back-button">
  <%= link_to image_tag("buttons/back.png",:border => 0), :back %>
  </div>
  <div><%= image_tag("underline.jpg",width: "100%")%></div>
</div>

<div id="page-yield">
<div id="box">
  <div class="info">
    <div class="name"><%= t('fee_@collection_name') %></div><div class="val themed_text"><span>:</span><%= @collection.name %></div>
    <div class="name"><%= t('fee_category_name') %></div><div class="val themed_text"><span>:</span><%= @collection.finance_fee_category.name %></div>
    <div class="name"><%= t('start_date') %></div><div class="val themed_text"><span>:</span><%= @collection.start_date %></div>
    <div class="name"><%= t('end_date') %></div><div class="val themed_text"><span>:</span><%= @collection.end_date %></div>
    <div class="name"><%= t('due_date') %></div><div class="val themed_text"><span>:</span><%= @collection.due_date %></div>
    <div class="extender"></div>
  </div></div>
<br/><br/>
<% unless @particulars.nil?%>
<table align="center" class="table table-hover table-bordered" style="width:80%">
	<tr class="tr-head">
	<th>Sl no</th>
	<th>Particular</th>
	<th>Student category</th>
	<th>Student Name</th>
	<th>Amount(Rs.)</th>
	<th>Created Date</th>
	</tr>
		<% @particulars.each_with_index do |p,i|%>
			<tr>
			<td class="col-3"><%= i+1%></td>
			<td class="col-3"><%= p.name%></td>
			<td class="col-3"><%= p.category.name%></td>
			<td class="col-3"><%= p.student.first_name+" "+p.student.last_name%></td>
			<td class="col-3"><%= p.amount%></td>
			<td class="col-3"><%= p.created_at.to_date%></td>	
			</tr>
		<%end%>
</table>
<%else%>
<h5>No fee @collection particulars found</h5>
<%end%>
  

</div>
