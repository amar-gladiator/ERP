<div id="myModal" class="modal fade"></div>
<div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',home_dashboard_path %></li>
    <li><%= link_to 'Finance',finance_index_path %></li>
    <li><%= link_to 'Manage Fees',finance_fees_path %></li>
    <li><%= link_to 'Fees Collection',finance_fee_collection_path %></li>
    <li><%= link_to 'Collection Dates',finance_fee_collection_view_path %></li>
    <li>Fee collection details</li>
  </ul>
</div>
<div id="flash"><%= render 'layouts/messages'%></div>
</br></br>
<div id="box">
    <div><%= t('fee_collection_name') %>&nbsp;&nbsp;<span>:</span><%= @collection.name %></div>
    <div><%= t('fee_category_name') %>&nbsp;&nbsp;<span>:</span><%= @collection.finance_fee_category.name %></div>
    <div><%= t('start_date') %>&nbsp;&nbsp;<span>:</span><%= @collection.start_date %></div>
    <div><%= t('end_date') %>&nbsp;&nbsp;<span>:</span><%= @collection.end_date %></div>
    <div><%= t('due_date') %>&nbsp;&nbsp;<span>:</span><%= @collection.due_date %></div>
  </div>
  </br></br>
<hr>
<div class="row">
  <div class="box col-md-12">
	  <div class="box-inner">
	    <div class="box-header well">
	      <h2>Particular Details</h2>
	    </div>

	    <div class="box-content">
	    	<%total=0%>
		    <% unless @particulars.nil?%>
		      <table id="datatable" class="table table-striped table-bordered responsive">
		        <thead>
		          <tr>
		            <th>Particular</th>
								<th>Student Category</th>
								<th>Student Name</th>
								<th>Amount(Rs.)</th>
								<th>Created Date</th>
		          </tr>
		        </thead>
		        <tbody>
		        <% @particulars.each do |p| %>
		          <tr>
		            <td class="col-3"><%= p.name%></td>
								<td class="col-3"><%= p.category.nil? ? "-": p.category.name%></td>
								<td class="col-3"><%= p.admission_no.nil? ? "-": p.student_name%></td>
								<td class="col-3"><%= p.collection_amount%></td>
								<td class="col-3"><%= p.created_at.to_date%></td>
		          </tr>
		          <%total+=p.collection_amount%>
		        <% end %>
		        </tbody>
		      </table>
		    <%else%>
					<center><h5>No particular found for this fee category</h5></center>
				<%end%>
	    </div>
	  </div>
  </div>
</div>


<hr>
<div class="row">
  <div class="box col-md-12">
	  <div class="box-inner">
	    <div class="box-header well">
	      <h2>Discount Details</h2>
	    </div>

	    <div class="box-content">
	    	<%total=0%>
		    <% unless @discounts.nil?%>
		      <table id="datatable" class="table table-striped table-bordered responsive">
		        <thead>
		          <tr>
		            <th>Discount Name</th>
								<th>Student Category</th>
								<th>Student Name</th>
								<th>Discount</th>
		          </tr>
		        </thead>
		        <tbody>
		        <% @discounts.each do |d| %>
		          <tr>
		            <td class="col-3"><%= d.name+"("+d.discount.to_s+"%)"%></td>
								<td class="col-3"><%= d.category.nil? ? "-": d.category.name%></td>
								<td class="col-3"><%= d.admission_no.nil? ? "-": d.student_name%></td>
								<td class="col-3"><%= d.collection_discount(total)%></td>
		          </tr>
		        <% end %>
		        </tbody>
		      </table>
		    <%else%>
					<center><h5>No discount found for this fee category</h5></center>
				<%end%>
	    </div>
	  </div>
  </div>
</div>






