<div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',home_dashboard_path %></li>
    <li><%= link_to 'Finance',finance_index_path %></li>
    <li><%= link_to 'Manage Fees',finance_fees_path %></li>
    <li><%= link_to 'Create Fees',finance_master_fees_path %></li>
    <li>Create Discount</li>
  </ul>
</div>
<div id="flash"><%= render 'layouts/messages'%></div>
<div class="row">
  <div class="col-md-12">
    <div class="pull-right">
      <%= link_to 'View Discount', 'fee_discounts',class: "btn btn-primary-link btn-xs" %>
    </div>
  </div>
</div>
<div class="row">
  <div class="box col-md-12">
    <div class="box-inner">
      <div class="box-header well">
        <h2>Fee Discount </h2>
      </div>

      <div class="box-content">
        <%= form_for @discount,url:{action: 'create_fee_discount'} do |f| %>
          <fieldset>
            <% if @discount.errors.any?%>
              <div class="alert alert-danger" style="width:500px" >
                <h4><%= t('Errors prohibited to being update:')%></h4>
                <ul>
                  <% @discount.errors.full_messages.each do |msg| %>
                    <li style="width:500px" align="left"><%= msg%></li>
                  <% end %>
                </ul> 
              </div>
            <% end %>

            <div class="row">
              <div class="col-sm-1"></div>
              <div class="col-sm-4">
                <div class="form-group">
                  <%= t('Discount Type')%><span class="necessary-field">*</span>
                  <%= f.select :type,['Batch','Student Category','Student'],{prompt:true},{onchange:"var a={type:$('#fee_discount_type').val()};$.get('discount_type',a,function(response){});",:style =>"width: 250px",class: "form-control"}%>
                </div>

                <div class="form-group">
                  <%= t('Name')%>
                  <span class="necessary-field">*</span>
                  <%= f.text_field :name, placeholder: "Name", class: "form-control" %>
                </div>

                <div class="form-group">
                  <%= t('Finance Fee Category') %> 
                  <%= f.select :finance_fee_category_id,@categories.collect{|c| [c.name,c.id]},{prompt:true},{onclick:"var a={id:$('#fee_discount_finance_fee_category_id').val()};$.get('category_batch',a,function(response){});",:style =>"width: 250px",class: "form-control"}%>
                </div>

                <div class="form-group">
                  <%= t('Select') %> &nbsp;&nbsp; &nbsp;&nbsp;
                  Select: &nbsp;&nbsp;
                  <%= link_to "All",finance_select_all_path,{onclick:"$('.check_box').prop('checked',true);",remote:true}%>&nbsp;&nbsp;
                  <%= link_to  "None",finance_select_none_path,{onclick:"$('.check_box').prop('checked',false);",remote:true}%>
                  <div id="fee_category"><%= render 'category_batches_list'%>
                  </div>
                </div>

                <div id="hidden"></div><br/>

                <div class="form-group">
                  <%= t('Discount(%)') %>
                  <%= f.text_field :discount, placeholder: "Discount",class: "form-control" %>
                </div>
              </div>
            </div>

            <div class="col-sm-5 col-sm-offset-5"> 
              <div class="form-actions">               
                <%= f.submit 'Submit', class: "btn btn-primary"%>
              </div>
            </div>
          </fieldset>        
        <%end%>
      </div>
    </div>
  </div>
</div>





























