<div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',home_dashboard_path %></li>
    <li><%= link_to 'Settings',setting_index_path %></li>
    <li><%= link_to 'Manage Course / Batch',setting_course_batch_path %></li>
    <li><%= link_to 'Course',courses_path %></li>
    <li><%= link_to 'Batch',course_path(@batch.course)%></li>
    <li>Edit</li>
  </ul>
</div>
<div id="flash"><%= render 'layouts/messages'%></div>
<br/>

<div class="row">
	<div class="col-md-2"></div>
    <div class="box col-md-6">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
                <h2>Batch - <%= @batch.course.course_name+" - "+@batch.name%>
                </h2>
            </div>

            <div class="box-content">
            <%= form_for @batch do |b|%>

            <fieldset>
            	<% if @batch.errors.any?%>
				    <div class="alert alert-danger alert-dismissable">
				    <ul><% @batch.errors.full_messages.each do |msg|%>
				      <li><%= msg %></li><%end%></ul>
				    </div>  
			    <%end%>
				<div class="col-sm-7 col-sm-offset-1">
	                <div class="form-group">
	                	<%=b.label :name%>
						<%=b.text_field :name, class: "form-control", style: "width: 350px", placeholder: "Batch Name"%>
	                </div>
	                <div class="form-group">
		            	<%= b.label :start_date %>
		            	<%= b.date_field :start_date, class: "form-control",  placeholder: "Start date", :style=>"width:350px"%>
		          	</div>
		          	<div class="form-group">
		            	<%= b.label :end_date %>
		            	<%= b.date_field :end_date, class: "form-control",  placeholder: "End date", :style=>"width:350px"%>
		          	</div>

		          	
	          	<div class="col-sm-7 col-sm-offset-6"> 
	          		<div class="form-actions">               
	            	<%= b.submit 'Update', class: "btn btn-success"%>
	          		</div>
	        	</div>
	            	
	            </div>
            </fieldset>
            <% end %>
            </div>
        </div>
    </div>
</div>