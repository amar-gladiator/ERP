<div id="content-header">
  <h1>Courses</h1>
  <h3>Batches</h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png",:border => 0), batches_path %>
  </div>
</div>
 <div id="inner-tab-menu">
  <ul>
    <li><%= link_to 'Exams' %> </li>
    <li><%= link_to 'Edit', edit_batch_path(@batch) %></li>
    <li><%= link_to 'Delete', batches_display_path(@batch),
                    method: :delete, data: { confirm: 'Are you sure?' } %></li>
    <li><%= link_to 'Subject',subjects_path%></li>
  </ul>
</div>

<div id="page-yield">

    <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

        <% unless flash[:warn_notice].nil? %>
    <div id="errorExplanation" class="errorExplanation"><%= flash[:warn_notice] %> </div>
  <% end %>

 <div class="box">
   <div class="bread_crumb">
    <%= link_to 'Courses', courses_path %> &raquo;
    <%= link_to @batch.course.course_name, course_path(@batch.course) %> &raquo;
    Batch <%= @batch.name %>
        </div>


<table id="listing" width="100%">
  <tr class="tr-head">
    <td>Sl.no</td>
    <td>Name</td>
    <td>Admission Number</td>
    <td></td>
  </tr>
  <% @slno = 0 %>
  <% @students.each do |student| %>
    <% @slno= @slno + 1 %>
    <tr class="tr-<%= cycle('odd', 'even')%>">
      <td class="col-1"><%=  @slno %></td>
      <td class="col-2"><%= student.first_name+" "+student.last_name %></td>
      <td class="col-3"><%= student.admission_no %> </td>
      <td class="col-4"><%= link_to 'View Profile',students_profile_path(student) %></td>
    </tr>
  <% end %>
</table>
