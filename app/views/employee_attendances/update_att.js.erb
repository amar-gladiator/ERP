$("ul.errors2").html("")
<% if @attendance.errors.any? %>
		<%  @attendance.errors.full_messages.each do |message| %>
		$("ul.errors").addClass("alert alert-danger alert-dismissable")  
		$("ul.errors2").append($("<li align ='left' style = 'width:300px'/>").html("<%= message.html_safe %>"))
		<% end %>
<% else %>
$('#employee_div').html("<%= j render 'employee'%>")
$("#myModal").modal("hide")
<%end%>
