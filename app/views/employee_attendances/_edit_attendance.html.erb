
<div class="modal-dialog">
<div class="modal-content">
<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
  <h3><%= "Edit attendance for #{@employee.first_name}" %></h3>
</div>
<div class="modal-body">
	<ul class="errors2"></ul>

<%= form_for  @attendance,url:{:action=>'update_att'},method: :patch ,remote:true do |c|%>
  <table class="table" align="center">  

    <tr>
       <td><%=c.label :Leave_Type %></td>
         <td><%= c.select :employee_leave_type_id, EmployeeLeaveType.where(status:'t').collect {|b| [b.name,b.id]},{prompt:'Select leave type'},{class: 'form-control'}%></td>
     </tr>
    <tr>
      <td><%= c.label :Reason_for_absence%></td>
      <td><%= c.text_field :reason, class: 'form-control', placeholder: 'Reason for absence'%></td>
    </tr>
    <tr>        
    <td><%=c.label :Half_Day%></td>
    <td><%= c.check_box :is_half_day%> </td>
    </tr>
    <tr>
  
<%if @reset_count.leave_taken.to_f==0.0 %>
    <td>  <%= link_to 'Delete', employee_attendances_destroy_attendance_path( @attendance),method: :delete, data: { confirm: "Are you sure to delete"},remote:true,class: "btn btn-success"%></td>
  <%else%>
       <td colspan="2"><%= c.submit 'Submit', class: "btn btn-primary"%>&nbsp;&nbsp;&nbsp;<%= link_to 'Delete', destroy_attendance_employee_attendance_path( @attendance),method: :delete, data: { confirm: "Are you sure to delete"},remote:true,class: "btn btn-success"%></td>
      <%end%>
        </tr>
  
</table>

<%end%>
</div></div></div>