<div id="content-header">
  <h1>General Setting</h1>
  <h3>Home</h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png",:border => 0), '/setting' %>
  </div>
</div>
<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
<div>
<%= form_for @general_setting, :html => { :multipart => true } do |f| %>


<% if @general_setting.errors.any?%>
      <div id="error_explanation">
        <ul>
          <% @general_setting.errors.full_messages.each do |msg| %>
          <li><%= msg%></li>
          <% end %>
        </ul> 
      </div>
    <% end %>


<table class="table table-hover table-bordered" style="width:800px">
  <tbody>
    <tr>
      <td class="col-2"><%=f.label :'school/college_Name' %></td> 
      <td class="col-1"><%= f.text_field :InstitutionName,:style =>"width: 310px", :placeholder=>"name" , class: "form-control" %></td></tr>
      

  <tr>

    <td class="col-2"><%= f.label :'school/college_Address' %></td> 
    <td><%= f.text_field :InstitutionAddress,:style =>"width: 310px",:placeholder=>"Address" , class: "form-control"%></td>
    
  </tr>

  <tr>
   
    <td class="col-2"><%= f.label :'School/College_Phone' %></td> 
    <td><%= f.text_field :InstitutionPhoneNo,:style =>"width: 310px",:placeholder=>"Phone " , class: "form-control"%></td>
    
  </tr>

  <tr>
    <td class="col-2"><%= f.label :Student_Attendance_Type %></td> 
    <td><%= f.select :StudentAttendanceType, ['SubjectWise','Daily'], :selected => 'SubjectWise', :style =>"width: 310px" ,:placeholder=>"Attendence" %></td>
  </tr>

  <tr>
    <td class="col-2"><%= f.label :Finance_start_year_date %></td> 
    <td><%= f.date_select :Finance_start_year_date, :start_year=>1999 %></td>
  </tr>
      
  <tr>
    <td class="col-2"><%= f.label :Finance_end_year_date %></td> 
    <td><%= f.date_select :Finance_end_year_date, :end_year=>2019%></td>
  </tr>

  <tr>
    <td class="col-2"><%= f.label :Language %></td> 
    <td><%= f.select :Language, ['English','Spanish','मराठी','हिंदी','العربية'], :selected => 'English',  :style => "width:310px" %></td>
  </tr>

  <tr>

    <td class="col-2"><%= f.label :Time_Zone %></td> 
    <td><%= f.select :TimeZone, ['Greeneich Mean Time(GMT-GMT+00:00)','Eastern European Time(EET) - GMT+02:00','Pakistan Lahore Time(PLT) - GMT+05:00','Indian Standard Time(IST) - GMT+05:30','Australia Eastern Time(AET) - GMT+10:00'], :selected => 'Indian Standard Time(IST) - GMT+05:30',  :style => "width:310px", class: "dropdown-toggle" %></td>
  </tr>

  <tr>
    <td class="col-2"><%= f.label :Country %></td> 
    <td><%= f.select :Country, ['Afghanistan','Bangladesh','Canada','India','Nepal'], :selected => 'India',  :style => "width:310px" %></td>
  </tr> 


<div class="field">
  <tr>

    <td><%= f.label :Upload_Logo %></td> 
    <td><%= f.file_field :image %></td>
  </tr>
</div>

  <tr>

    <td><%= f.label :Network_State %></td> 
    <td><%= f.select :NetworkState, ['Online','Offline'], :selected => 'Online', :style =>"width: 310px" %></td>
  </tr>

<div>
  <tr>
    <td><%= f.label :Include_Grading_Systems %></td> 

    <td>
    Select: <a href="#" id="select">All</a>
        <a href="#" id="disselect">None</a>

        <p> <%= f.check_box :CCE, {:checked=>false}%> 
        <%= label_tag(:CCE, "CCE") %></p>
        <p> <%= f.check_box :CWA, {:checked=>false}%> 
        <%= label_tag(:CWA, "CWA") %></p>
        <p> <%= f.check_box :GPA, {:checked=>false}%> 
        <%= label_tag(:GPA, "GPA") %></p>
      </td>
  </tr>
</div>

  </tbody>

</table>


  <table align="center">
    <tr>
      <td> <%= f.check_box :AddmissionNumberAutoIncreament, {:checked=>true} %>  <%= label_tag(:Enable_Auto_increment_Student_admission_no, "Enable Auto increment Student admission no. ") %>
      </td>
    </tr>
    <tr>
    <td> <%= f.check_box :EmployeeNumberAutoIncreament, {:checked=>true} %> 
        <%= label_tag(:Enable_Auto_increment_Employee_no, "Enable Auto increment Employee no. ") %>
    </td>
    </tr>
    <tr>
        <td> <%= f.check_box :EnableNewsCommentModeration, {:checked=>false} %> 
        <%= label_tag(:Enable_News_Comment_Moderation, "Enable News Comment Moderation") %>
        </td> 
    </tr>
    <tr><td>
    <%= f.submit :'Update',  class: "btn btn-success"%> 
    
    </td>
    </tr>
    
</table>

 <% end %>
</div>


<script type="text/javascript">
$( document ).ready(function() {
             $('#select').click(function(){
          $('#general_setting_CCE').attr('checked', true);
           $('#general_setting_CWA').attr('checked', true);
            $('#general_setting_GPA').attr('checked', true);
        });
         
});

</script>

<script type="text/javascript">
$( document ).ready(function() {
             $('#disselect').click(function(){
          $('#general_setting_CCE').attr('checked', false);
           $('#general_setting_CWA').attr('checked', false);
            $('#general_setting_GPA').attr('checked', false);
        });
         
});

</script>