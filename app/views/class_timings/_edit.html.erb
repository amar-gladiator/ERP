<div class="modal-dialog">
<div class="modal-content">
<div class="modal-header">
  <h3><%= "Editing #{@class_timing1.name}" %></h3>
</div>
<div class="modal-body">
        <ul class="errors"></ul>
<%= form_for [@batch,@class_timing1],remote: true do |f|%>
 
            <div class="form-group">
            <div class="col-sm-4"> <b>Name:</b></div>
             <div class="col-sm-8"><%=f.text_field :name , class: "form-control"%></div>
             </div>

             <br><br> <br>

             <div class="form-group">
            <div class="col-sm-4"> <b>Start Time:</b></div>
            <div class="col-sm-8"><%=f.time_select :start_time, class: "form-control" %></div>
            </div>
            <br><br>
             <div class="form-group">
            <div class="col-sm-4"><b>End Time:</b></div>
           <div class="col-sm-8"> <%=f.time_select :end_time , class: "form-control"%></div>
            </div>
            <br>
           <div class="form-group">
            <div class="col-sm-5">
          <%= f.check_box :is_break %>&nbsp;&nbsp;<b>Is a break:</b>
          </div></div>
          <br><hr>
           <div class="form-group">
            <div class="col-sm-offset-3">
               <%= f.submit 'Update', class: "btn btn-success"%>&nbsp;
               <%= link_to 'Cancel', '#', class: "btn btn-default",data:{dismiss:"modal"}%>
            </div></div>
<% end %>
</div>


</div></div>