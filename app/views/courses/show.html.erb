<div id="content-header">
  <h1>Courses</h1>
  <h3>Show</h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png",:border => 0), courses_path %>
  </div>
</div>
<div id="inner-tab-menu">
  <ul>
    <li><%= link_to 'New', new_course_batch_path(@course) %> </li>
  </ul>
</div>

<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <div class="box">
        <div class="bread_crumb">
        <%= link_to 'Courses', courses_path %> &raquo;
        <%= @course.course_name %>
        </div>

<table class="table">
<ul id="category-list">
<tbody>
<thead>
	<tr><th>Batch</th>
		</tr>
</thead>
		
<% @batches.each do |batch|%>
	
			<tr>
			<td><%=link_to batch.course.code+" - "+batch.name , batches_display_path(batch) %></td>
			<td><%= link_to 'Edit', edit_batch_path(batch) %></td>
 			<td><%= link_to 'Delete', batch_path(batch),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
<%end%>
</tbody>
</ul>
</table>

</div>
</div>


