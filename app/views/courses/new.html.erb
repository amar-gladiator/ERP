
<div class="page-header">
  <h1>Courses New <small>creating new course</small></h1>
</div>

<%= form_for @course  do |c| %>
<div class="container" style="margin-top:150px">
	<div class="row">
		<div class="col-md-1"></div>
		<div class="col-md-5">
		<!-- <div class="alert alert-success">Welcome to the Sample App!</div> -->
			<div><% if @course.errors.any?%>
				<% @course.errors.full_messages.each do |msg|%>
				<%= msg%>
				<%end%>
				<%end%>
			</div>	
			<h2>Course details</h2>
			<div>
				<div><%=c.label :course_name %></div>
				<div><%= c.text_field :course_name,:style =>"width: 310px", :placeholder=>"course" , class: "form-control"%></div>

			</div>	
		
			<div>
				<div><%=c.label :section_name %></div></td>
				<div><%= c.text_field :section_name,:style =>"width: 310px", :placeholder=>"section" , class: "form-control" %></div>
				</div>
			
		
			<div>
			
				<div><%=c.label :code %></div>
				<div><%= c.text_field :code ,:style =>"width: 310px", :placeholder=>"code" , class: "form-control"%></div>
			</div>
		
			
		</div>
		<div class="col-md-5">
		<h1>Initial batch</h1>
				<div>
				<%= c.fields_for :batches do |batch_form|%>

				<div><%=batch_form.label :name%></div>
				<div><%=batch_form.text_field :name,:style =>"width: 310px", :placeholder=>"code" , class: "form-control"%></div>

				<div><%=batch_form.label :start_date%></div>
				<div><%=batch_form.date_select :start_date,:style =>"width: 310px", :placeholder=>"code" , class: "form-control"%></div>

				<div><%=batch_form.label :end_date%></div>
				<div><%=batch_form.date_select:end_date,:style =>"width: 310px", :placeholder=>"code" , class: "form-control"%></div>
				<%end%>
				</div>	
		</div>
				
		<div class="col-md-1"></div>
	</div>
</div>

<div class="container" style="margin-top:50px">
	<div class="row">
		<div class="col-md-5"></div>
		<div class="col-md-2"><%= c.submit 'create', class: "btn btn-primary" %>			
		</div>	
		<div class="col-md-5"></div>
	</div>
</div>
<%end%>










