
<div id="content-header">
  <h1>Courses</h1>
  <h3>Manage Course</h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png",:border => 0), "setting/course_batch" %>
  </div>
 <div><%= image_tag("underline.jpg",width: "100%")%></div>
</div>

<div id="inner-tab-menu">
  <ul>
    <li><%= link_to 'New', new_course_path(@course) %> </li>

  </ul>
</div>


<div id="page-yield">
<div class="box">
    <% unless flash[:notice].nil? %>
    <div align="center" class="alert alert-success" style="width:50%"> <%= flash[:notice] %> </div>
  <% end %></div>
<% if @courses.empty? %>
 <h4 align="center">No Record Found </h4>
   <% else %>
 <table align="center" class="table table-hover table-bordered" style="width:800px">
				<tr class="tr-head"><th colspan="3">Course Name</th>
        </tr>
				
			<tbody>
				<% @courses.each do |c|%>
	
				<tr>
				<td class="col-2"><%= link_to c.course_name+"  "+c.section_name,course_path(c)%></td>
				<td><%= link_to 'edit' ,edit_course_path(c),remote:true%></td>
				<td><%= link_to 'delete' ,course_path(c),method: :delete, data:{confirm:"Are You sure to delete course #{c.course_name} ?"}%></td>	
				
				</tr>
				<%end%>
        	</tbody>
        	</table>
  <% end %>
<div id="editmodal" class="modal fade">
	
    </div>
  