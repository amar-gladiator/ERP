
<div id="content-header">
  <h1>Courses</h1>
  <h3>Manage Course</h3>
  <div id="app-back-button">
    <%= link_to image_tag("buttons/back.png",:border => 0), "/setting" %>
  </div>
</div>

<div id="inner-tab-menu">
  <ul>
    <li><%= link_to 'New', new_course_path(@course) %> </li>

  </ul>
</div>


<div id="page-yield">

    <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>


    <% unless flash[:warn_notice].nil? %>
    <div id="errorExplanation" class="errorExplanation"><%= flash[:warn_notice] %> </div>
  <% end %>

 <table align="center" class="table table-hover table-bordered" style="width:500px">
				
				
			<tbody>

				<% @courses.each do |c|%>
	
				<tr>
				<td><%= link_to c.course_name+ " - "+c.section_name,course_path(c)  %></td>
				<td><%= link_to 'edit' ,edit_course_path(c), class: "btn btn-success",remote:true%></td>
				<td><%= link_to 'delete' ,course_path(c),method: :delete, data:{confirm: 'Delete data?'}, class: "btn btn-default"%></td>	
				
				</tr>
				<%end%>
        	</tbody>
        	</table>
<div id="editmodal" class="modal fade">
	
    </div>
  