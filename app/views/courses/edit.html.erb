
	
<%= form_for @course do |c| %>
	<table>
	<!-- inserting course-->
		<tr>
			<td><%=c.label :course_name %></td>
			<td><%=c.text_field :course_name %></td>
		</tr>
		<!-- inserting section name -->
		<tr>
			<td><%=c.label :section_name %></td>
			<td><%=c.text_field :section_name %></td>
		</tr>
		<!-- inserting code -->
		<tr>
			<td><%=c.label :code %></td>
			<td><%=c.text_field :code %></td>
		</tr>
		<!-- inserting grading type -->
		<tr>
			<td><%=c.label :grading_type%></td>
			<!-- <td><%=c.text_field :grading_type %></td> -->
			<td><%=collection_select(:grading,:grading_id,Grading.all,:id,:name)%></td>
		</tr>
		<tr>
		<td><%=c.submit%></td>
		</tr>
	</table>
<% end %>

<%= link_to 'back', courses_path %>






