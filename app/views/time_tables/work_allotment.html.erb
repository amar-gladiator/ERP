<div>
  <ul class="breadcrumb">
    <li><%= link_to 'Home',home_dashboard_path %></li>
    <li><%= link_to 'Time Table',time_tables_path %></li>
       <li>Work Allotment</li>
  </ul>
</div><div id="flash"><%= render 'layouts/messages'%></div>

<div class="row">
  <div class="col-md-12">
    <div class="pull-right">
      <%= link_to 'Assign Multiple Teacher',employees_subject_assignment_path, class: "btn btn-primary-link btn-xs" %>
      </div>
  </div>
</div>
<div class="row">
  <div class="box col-md-12">
  <div class="box-inner">
    <div class="box-header well">
      <h2>Work Allotment</h2>
    </div>
 
    <div class="box-content">

<%=form_for :employees_subjects,:html=>{:id=>'work_allotment_form'} do |f| %>
  <table id="datatable" class="table table-striped table-bordered responsive">
    <% @batches.each do |batch| %>
       <tr><th colspan="2"><h4><b><%= batch.name%></b></h4></th>
      </tr>
        <tr>
         <% batch.subjects.each do |subj| %>
              <td><%=subj.name%></td>
        <td><%=select_tag "employee_subjects[#{subj.id}]",options_for_select([[t('select_employee'),""]]+Employee.all.collect{|c| [c.first_name,c.id]},subj.employees.first.try(:id)),class: "form-control",style:"width:350px"%>
         </td>
          </tr>
         <%end%>
      <% end %>
 
 </table>
         <p align="center"><%= f.submit 'update',class: "btn btn-primary"%></p>
     <% end %>
  </div>
</div>
</div>
</div>


