<div class="row">
  <div class="box col-md-12">
  <div class="box-inner">
    <div class="box-header well">
      <h2>Teacher Timetable</h2>
    </div>

<% unless @time.empty? %>
    <div class="box-content">
 <table id="datatable" class="table table-striped table-bordered responsive">
        <tr>
         <td></td>
         <% @weekdays.each do |weekday| %>
            <th colspan="<%=@class_timings.count %>"><%= weekday.weekday%></th>
          <%end%>
        </tr>
        <tr> 
        	<td></td>
        	<% @weekdays.each do |weekday| %>
            <% @class_timings.each do |c| %>
              <th>
                <%=c.start_time.strftime("%I:%M %p")+"-"+c.end_time.strftime("%I:%M %p")%>
              </th>
            <%end%>
          <%end%>
        </tr>
       <%@employees.each do |employee|%>
       <tr>
       	 <th><%=employee.first_name%></th>
       	    <% @weekdays.each do |weekday| %>
            <% @class_timings.each do |c| %>
              <td>
            <%t=teacher_time_table(employee,c,weekday,@time_table)%>
              <% unless t.nil?%>
              	<%= t.subject.name %><br/>
              	<%= t.batch.name %>
              <%end%>
              </td>
            <%end%>
          <%end%>
       </tr>
    <%end%>
  </table>
 <%else%>
  <%='No timetable entries found'%>
  <%end%>
</div>
</div>
</div>
</div>

