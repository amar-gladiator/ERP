<div class="row">
  <div class="box col-md-12">
  <div class="box-inner">
    <div class="box-header well">
  <h2>Institutional Timetable</h2>
    </div>
     <div class="box-content">
      <table class="fc-header" style="width:100%">
      <tbody>
        <tr>
          <td class="fc-header-left">
            <%= link_to "◄ prev",display_institutional_time_table_time_tables_path(:next=>(@today-1.day)),remote:true, class: "fc-button fc-button-prev fc-state-default fc-corner-left"%>
            <%= link_to "► next", display_institutional_time_table_time_tables_path(:next=>(@today+1.day)),remote:true, class: "fc-button fc-button-next fc-state-default fc-corner-right"%>
            <span class="fc-header-space"></span>
          </td>
          <td class="fc-header-center">
            <span class="fc-header-title"><h2><%= I18n.l(@today,:format=>" %d %B %Y") %></h2></span>
          </td>
          <td class="fc-header-right">
            <span class="fc-button fc-button-month fc-state-default fc-corner-left fc-state-active" unselectable="on">day view</span>
          </td>
        </tr>
      </tbody>
    </table>
<table id="datatable" class="table table-striped table-bordered responsive">
<tbody>
<%@time_table.each do |t| %>
 <%@time_table_entries=TimeTableEntry.where(time_table_id:t.id)%>
 <%@time_table_entries.each do |time|%>
   <% @timing = ClassTiming.find(time.class_timing_id) %>
     <% @present=TimeTableEntry.find_by_class_timing_id_and_weekday_id_and_time_table_id(time.class_timing_id,time.weekday_id,time.time_table) %>  
      <%if time.weekday.weekday==I18n.l(@today,:format=>"%A")%>
     <tr>
        <th>
          <%='time'%><hr>
          <%=time.batch.name%>
         </th>
      <td><%=@timing.start_time.strftime("%I:%M %p")+"-"+
       @timing.end_time.strftime("%I:%M %p")%><hr>
      <%=@present.subject.name%><br/>
      <%=@present.employee.first_name%>
    </td>
   </tr>
<%end%>
<%end%>
<%end%>
<tr><td><%='No Time Assign For These Day' if @time_table_entries.blank?%></td></tr>
    </tbody>
</table>
</div>
</div>
</div>
</div>




                                                  